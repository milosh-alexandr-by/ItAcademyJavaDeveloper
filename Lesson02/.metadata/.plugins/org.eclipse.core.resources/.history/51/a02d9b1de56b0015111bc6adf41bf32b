
import java.util.Scanner;

public class DayOfWeek {

	public static void main(String[] args) {
		
		Integer numberOfWeek = 0; 
		
		Scanner sc = new Scanner(System.in);
		System.out.print("Введите число: ");
		
		if (sc.hasNextInt()) {
			numberOfWeek = sc.nextInt();
			if ((numberOfWeek>=1) & (numberOfWeek<=7))
				switch (numberOfWeek) {
				case 1: System.out.print("Понедельник"); break;
				case 2: System.out.print("Вторник"); break;
				case 3: System.out.print("Среда"); break;
				case 4: System.out.print("Четверг"); break;
				case 5: System.out.print("Пятница"); break;
				case 6: System.out.print("Суббота"); break;
				case 7: System.out.print("Воскресениье"); break;
			}
			else {
				System.out.println("В неделе семь дней, поэтмоу введите число от 1 до 7");			
			}
			
		}
		else {
			System.out.print("Ошибка: введите число от 1 до 7: ");
		}
		sc.close();
		
		
	}

}
