
import java.util.Scanner;

public class CompareNumber {

	public static void main(String[] args) {
		
		/*	
			Написать  программу,  которая  сравнивает  два  введенных  с  клавиатуры числа.
		*/
		

		
		boolean boo1 = false;
		double str1 = 1;
		double str2 = 2;
				
		// Проверяем, вводится ли склавиатуры число или строка и ссобщаем об ошиьке.
		// Предлагаем ввести число ещё раз.
		
		do {
			Scanner sc = new Scanner(System.in);
			System.out.print("Введите первое число: ");
			if (sc.hasNextDouble()) {
				boo1 = true;
			}
			else {
				System.out.println("Вы ввели не число. Повторите попытку.");
			}
			str1 = sc.nextDouble();
		} while( boo1 == false);
		
		boolean boo2 = false;
		
		do {
			Scanner sc = new Scanner(System.in);
			System.out.print("Введите второе число: ");
			if (sc.hasNextDouble()) {
				boo2 = true;
			}
			else {
				System.out.println("Вы ввели не число. Повторите попытку.");
			}
			str2 = sc.nextDouble();
		} while( boo2 == false);
		
		System.out.println(str1);
		System.out.println(str2);
		
		
		
		
		
