
import java.util.Scanner;

public class Calculator {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		System.out.print("Введите ваше выражение, например \"1+1\": ");
		String str = sc.nextLine();
		System.out.println(str);
		sc.close();
//		char firstMinus = str.charAt(0);
//		if (firstMinus == '-') {
//			System.out.println("Первый знак минус");
//		}
//		else {
//			System.out.println("Не минус");
//		}
//		
		int numberOfSign = 0;
		char sign = '0';
		char[] chArray = str.toCharArray();
		for (int i=0; i<str.length(); i++) {
			if ( (chArray[i] == '+') | (chArray[i] == '*') | (chArray[i] == '-') | (chArray[i] == '/') )  {
				numberOfSign = i;
				sign = chArray[i];
				
			}
		}
		System.out.println(numberOfSign);
		System.out.println(sign);
		
		String firstHalf = str.substring(0, numberOfSign);
		String secondHalf = str.substring(numberOfSign+1);
		System.out.println(firstHalf);
		System.out.println(secondHalf);
		
		switch (sign) {
		case '+': System.out.println("Сложить"); break;
		case '-': System.out.println("Отнять"); break;
		case '*': System.out.println("Умножить"); break;
		case '/': System.out.println("Поделить"); break;
		}

	
		
	}

}
