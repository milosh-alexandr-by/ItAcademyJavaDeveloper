
import java.util.Scanner;       // импортируем класс Scanner

public class StringHalf {

	public static void main(String[] args) {
		
	/*	Создайте переменную типа String c любым текстом (не сильно короткое). 
		Далее выведите на экран количество символов в данной строке.
		Далее разделите строку пополам (если ровно поделить не выходит то +­1 не cтрашно),
		в результате у вас должно быть 2­е новых переменных типа String с 
		частями из изначальной строки. Полученные строки выведите на экран.
	*/

		Scanner sc = new Scanner(System.in);            // создаём объект класса Scanner
		System.out.print("Введите вашу строку: ");
		String YourString = sc.nextLine();
		int numberOfCharacter = YourString.length();
		System.out.println("Количество символов в вашей строке: " + numberOfCharacter);
	}

}
