
import java.util.Scanner;

public class CompareNumber {

	public static void main(String[] args) {
		
		
		String str1 = "str1";
		String str2 = "str1";
				
		// Проверяем, вводится ли склавиатуры число или строка и ссобщаем об ошибке.
		// Предлагаем ввести строку ещё раз.
		
		boolean boo1 = false;                                   // создаём переменную boo1 которая возвращает true если ввели число и выходим из цикла do-while
		do {                                                    // в противном случае предлагаем ввести строку ещё раз
			Scanner sc1 = new Scanner(System.in);
			System.out.print("Enter first number: ");
			if (sc1.hasNextDouble()) {
				boo1 = true;
			}
			else {
				System.out.println("Вы ввели не число. Повторите попытку.");
			}
			str1 = sc1.nextLine();
			
		} while( boo1 == false);
		
		boolean boo2 = false;
		
		do {
			Scanner sc2 = new Scanner(System.in);
			System.out.print("Enter second number: ");
			if (sc2.hasNextDouble()) {
				boo2 = true;
			}
			else {
				System.out.println("Вы ввели не число. Повторите попытку.");
			}
			str2 = sc2.nextLine();
			
		
		} while( boo2 == false);
		
		
		System.out.println(str1);
		System.out.println(str2);
		
		Double d1 = Double.valueOf(str1);
		Double d2 = Double.valueOf(str2);
		
		// разобраться с doble, с точками и запятыми
		// вывести doble без точки
		
			
		if (d1 == d2) {
			System.out.print("Числа равны: " + d1 + "=" + d2);
		} 
		else {
			if (d1 > d2) {
				System.out.print("Первое число больше второго: " + d1 + ">" + d2);
			}
			else {
				System.out.print("Второе число больше первого: " + d1 + "<" + d2);
			}
		}
		
	}

}
