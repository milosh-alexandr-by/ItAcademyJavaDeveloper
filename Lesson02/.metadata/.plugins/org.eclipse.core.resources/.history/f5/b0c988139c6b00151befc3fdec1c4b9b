		int i = 5555555;
		int g = i%100;
		System.out.println(g);
		
		if ((g >= 11) & ( g<= 14))  {
			System.out.println("рублей");
		}
		else {
			int p = g%10;
			switch (p){
			case 1:
				System.out.println("рубль");
			case 2: 
			case 3:
			case 4:
				System.out.println("рубля");
			case 5: 
			case 6: 
			case 7: 
			case 8:
			case 9:
			case 0:
				System.out.println("рублей");
			}
		}
		

	}

}
