
public class MainDiagonal {

	public static void main(String[] args) {
		
		int myMatrix[][] = {{1, 2, 3, 5}, {4, 5, 6, 7}, {7, 8, 9, 1}, {5, 8, 0, 0}}; 
		for (int i=0; i<4; i++) {
			System.out.println();
			for (int j=0; j<4; j++) {
				System.out.print(myMatrix[i][j] + "  ");				
			}
		}
		System.out.println();
		
		System.out.print("Ёлементы главноq диагонали: ");
		for (int k=0; k<4; k++) {
			if (k==3) {
				System.out.println(myMatrix[k][k] + "."); break;
			}
			System.out.print(myMatrix[k][k] + ", ");
		}
		
		System.out.print("Ёлементы побочной диагонали: ");
		for (int n=0; n<4; n++) {
			if (n==3) {
				System.out.println(myMatrix[n][3-n] + "."); break;
			}
			System.out.print(myMatrix[n][3-n] + ", ");
		}
	}

}
