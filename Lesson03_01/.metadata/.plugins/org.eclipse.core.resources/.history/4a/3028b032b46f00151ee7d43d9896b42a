
public class MatrixWithZero {

	public static void main(String[] args) {

		Integer[][] matrix = new Integer[5][4];
		for (int i=0; i<5; i++) {
			for (int j=0; j<4; j++) {
				matrix[i][j] = (int) (Math.random()*10);
			}
		}
		for (int i=0; i<5; i++) {
			for (int j=0; j<4; j++) {
				System.out.printf("%4d", matrix[i][j]);
			}
		System.out.println();	
		}

		Integer[][] newMatrix = new Integer[5][4];
		
		for (int i=0; i<5; i++) {
			for (int j=0; j<4; j++) {
				int sum = 0;
				for (int stolb=0; stolb<4; stolb++) {
					if (matrix[i][stolb] == 0) {
						sum = sum +1;
					}
				for (int strok=0; strok<5; strok++) {
					if (matrix[strok][j] == 0) {
						sum = sum +1;
					}
				}
				if (sum == 0) {
					newMatrix[i][j] = matrix[i][j];
				}
				else {
					newMatrix[i][j] = 0;
				}
				}
			}
		}
		
		System.out.println("Новая матрица:");
		for (int i=0; i<5; i++) {
			for (int j=0; j<4; j++) {
				System.out.printf("%4d", newMatrix[i][j]);
			}
		System.out.println();	
		}
		
	}

}
