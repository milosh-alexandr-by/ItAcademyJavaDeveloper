		if (hasBodySUV==true) {
			System.out.println("����������� �������. ����������� ����� ������.");
		}
		else {
			System.out.println("�������� ������.");
		}
	}
	
	// ���� increasedRearSeat=true �� ����� ��� ������ ���������� ���������, �������� ��� ��������
	public boolean increasedRearSeat;	  // ����������� ����� ��� ������ ����������
	public void hasIncreasedRearSeat(boolean hasIncreasedRearSeat){
		if (hasIncreasedRearSeat==true) {
			System.out.println("����� ��� ������ ���������� ���������. ����� ����������� ������ ����� ������. ");
		}

	}

}
